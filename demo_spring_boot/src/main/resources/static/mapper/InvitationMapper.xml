<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdqn.demo_spring_boot.dao.InvitationMapper">
    <select id="getInvitationList" resultType="invitation">
        select * from invitation where 1=1
        <if test="title!=null">
            and title like "%"#{title}"%"
        </if>
        limit #{limit1},#{limit2}
    </select>
    <delete id="delete" parameterType="int">
		delete from invitation where id=#{id}
	</delete>
    <select id="getInvitationCount" resultType="int" parameterType="string">
        select count(1) from invitation where 1=1
        <if test="title!=null">
            and title like "%"#{title}"%"
        </if>
    </select>
</mapper>